<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="50dp"
    android:paddingStart="50dp"
    android:paddingRight="20dp"
    android:paddingEnd="20dp"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <TextView

            android:id="@+id/lvHeaderBuffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/darkGrey"/>

        <Button
            android:id="@+id/btnToMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_map"
            android:minHeight="30dp"
            android:focusable="false"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:textColor="@color/another_color"
            android:layout_below="@+id/lvHeaderBuffer"
            />

        <TextView
            android:id="@+id/lvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lvHeaderBuffer"
            android:layout_toRightOf="@+id/btnToMap"
            android:layout_toEndOf="@+id/btnToMap"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>


    <ImageView
        android:id="@+id/lvImageWagon"
        android:contentDescription="@string/trolley_content_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="30"
        android:layout_gravity="center_vertical"
        android:foregroundGravity="center"
        android:src="@drawable/trolley1"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/lvHeaderNumberOfWagons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="30"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/lvImageTime"
        android:contentDescription="@string/time_content_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="30"
        android:foregroundGravity="center"
        android:layout_gravity="center_vertical"
        android:src="@drawable/time"
        android:tint="@color/red"
        android:visibility="visible"/>

</LinearLayout>